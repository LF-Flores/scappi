{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    "module": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "build",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "Node",
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}